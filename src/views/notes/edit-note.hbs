<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2>Editar Nota</h2>
            </div>
            <div class="card-body">
                <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input value="{{note.title}}" type="text" name="title" placeholder="Inserta un titulo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" placeholder="Inserta una descripcion" class="form-control">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Actualizar Nota
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>