<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Registra tu cuenta</h1>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input value="{{name}}" type="text" class="form-control" name="name" placeholder="Ingresa tu nombre">
                    </div>
                    <div class="form-group">
                        <input value="{{email}}" type="email" class="form-control" name="email" placeholder="Ingresa tu email">
                    </div>
                    <div class="form-group">
                        <input value="{{password}}" type="password" class="form-control" name="password" placeholder="Ingresa tu password">
                    </div>
                    <div class="form-group">
                        <input {{confirm_password}} type="password" class="form-control" name="confirm_password" placeholder="Confirma tu password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>